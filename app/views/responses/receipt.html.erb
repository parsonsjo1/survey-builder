<style>
  #survey-title-box-display {
    background-color: <%= survey.color %>;
  }
  #survey-title-display {
    color: <%= survey.title_color %>;
  }
</style>

<div class="container-fluid fill open-sans">
  <div class="row no-gutters fill-min">

    <div class="col-10 offset-1" id="survey-display">

      <!-- Survey title box and title -->
      <div class="row no-gutters align-items-center" id="survey-title-box-display">
          <div class="col-10 offset-1">
            <div id="survey-title-display"><%= @survey.title %></div>
          </div>
      </div>

      <div class="row no-gutters" id="thank-you-row">
        <div class="col-12" id="thank-you">Thank You!</div>
        <div class="col-12" id="thank-you-message">We've sent out a receipt of the answers provided.</div>
      </div>
    </div>

  </div>
</div>  