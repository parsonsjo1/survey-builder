<div class="col-10 offset-1">
  <!-- Header -->
  <div class="row" id="question-logic-header">
    <div class="col-12" id="question-logic-title">Question Logic</div>
  </div>

  <!-- Choice -->
  <% if question.allow_multiple_answers == true and question.question_type == "Multiple Choice"%>
    <div class="row" id="logic-dropdown-label">
      <div class="col-12">If choices:</div>
    </div>
    <div class="row multiple-choice-list">  
      <%= render partial: 'questions/choice', collection: question.choices, locals: { question: question } %> 
    </div>
  <% else %>
    <div class="row">
      <div class="col-4" id="logic-dropdown-label">
        <div>If choice:</div>
      </div>    
      <div class="col-8">
        <select class="custom-select question-logic-dropdown fill-width">
          <% question.choices.each do |choice| %>
            <%= render partial: 'questions/dropdown_choice', locals: {choice: choice} %>
          <% end %>
        </select>
      </div>
    </div>
  <% end %>

  <div class="row" id="question-logic-selection">
    <!-- Show Questions -->
    <div class="col-12">
      <div>Show Questions:</div>
    </div>
    <% questions.each do |question| %>
      <div class="col-4" style="text-align: center;">
        <input class="form-check-input" type="checkbox" ><%= question.sequence %>
      </div>
    <% end %>
  </div>

</div>